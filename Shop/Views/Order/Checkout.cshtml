@model Order
<div class="row text-center">
    <h3>Оформление заказа</h3>
    <form asp-action="Checkout" method="post" class="form-horizontal mx-auto">
        <div class="form-group col-md-12">
            <label asp-for="name"></label>
            <div>
                <input asp-for="name" class="=form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="surname" class="col-form-label"></label>
            <div>
                <input asp-for="surname" class="=form-control" />
                <span asp-validation-for="surname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="adress" class="col-form-label"></label>
            <div>
                <input asp-for="adress" class="=form-control" />
                <span asp-validation-for="adress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="phone" class="col-form-label"></label>
            <div>
                <input asp-for="phone" class="=form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="email" class="col-form-label"></label>
            <div>
                <input asp-for="email" class="=form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-md-12 mt-2">
            <input asp-controller="Order" asp-action="Checkout" class="btn btn-success" type="submit" value="завершить заказ" />
         </div>
    </form>
</div>